---
layout: layout.njk
pagination:
  data: collections.categories
  size: 1
  alias: category
permalink: "categories/{{ category.fileSlug }}/index.html"
title: "{{ category.data.title }} | TurboCare"
---

<section class="py-20 px-6 max-w-6xl mx-auto text-white">

  <h1 class="text-4xl font-bold mb-6 text-blue-400">
    {{ category.data.title }}
  </h1>

  {% if category.data.description %}
  <p class="mb-10 text-gray-300">
    {{ category.data.description }}
  </p>
  {% endif %}

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

    {% for product in collections.products %}
      {% if product.data.category | lower == category.data.title | lower %}
      
      <div class="bg-gray-900 rounded-2xl shadow-lg p-6">

        {% if product.data.images and product.data.images.length > 0 %}
          {% if product.data.images and product.data.images.length > 0 %}
  <img src="{{ product.data.images[0] }}" class="rounded-lg mb-4">
{% endif %}
        {% endif %}

        <h3 class="text-xl font-semibold mb-2">
          {{ product.data.title }}
        </h3>

        <p class="text-gray-400 mb-2">
          â‚¹{{ product.data.mrp }}
        </p>

        <a href="/products/{{ product.fileSlug }}/"
           class="bg-blue-500 px-4 py-2 rounded-full text-sm">
           View Product
        </a>

      </div>

      {% endif %}
    {% endfor %}

  </div>

</section>