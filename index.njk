---
layout: layout.njk
title: TurboCare
---

  <!-- Header -->
  <header id="main-header" class="bg-gray-900 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
      
      <!-- Logo -->
      <div class="text-2xl font-bold text-blue-400">TurboCare</div>
      
      <!-- Desktop Nav -->
      <nav class="hidden md:flex space-x-8 text-sm font-medium">
        <a href="/" class="hover:text-blue-400">Home</a>
        <a href="/#products" class="hover:text-blue-400">Products</a>
<a href="/dealer/" class="hover:text-blue-400">Dealer</a>
        <a href="/#about" class="hover:text-blue-400">About</a>
        <a href="/#contact" class="hover:text-blue-400">Contact</a>
      </nav>
      
      <!-- CTA Button (Desktop only) -->
      <div class="hidden md:block">
        <a href="#products" class="cta-btn bg-blue-500 hover:bg-blue-600 text-white px-5 py-2 rounded-full shadow-md">
          Explore Products
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="menu-btn" class="md:hidden focus:outline-none">
        <svg id="menu-open" xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-close" xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-gray-300 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Dropdown -->
    <nav id="mobile-menu" class="md:hidden bg-gray-800 border-t border-gray-700">
      <div class="flex flex-col space-y-4 px-6 py-4 text-sm font-medium">
        <a href="#" class="hover:text-blue-400">Home</a>
        <a href="#products" class="hover:text-blue-400">Products</a>
        <a href="#about" class="hover:text-blue-400">About</a>
        <a href="#contact" class="hover:text-blue-400">Contact</a>
        <a href="#products" class="cta-btn bg-blue-500 hover:bg-blue-600 text-white px-5 py-2 rounded-full text-center shadow-md">
          Explore Products
        </a>
      </div>
    </nav>
  </header>

    
    <!-- Hero Section -->
    <section class="relative bg-gray-900 text-white min-h-screen flex items-center">
<p style="color:yellow;">TEST DATA: {{ homepage.hero_title }}</p>
      <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20">
        <div class="flex flex-col md:flex-row items-center justify-between">
          
          <!-- Hero Text -->
          <div class="md:w-1/2 space-y-6 text-center md:text-left">
<p>{{ homepage.hero_title }}</p>
<p>{{ homepage.hero_image }}</p>
            <h1 class="text-4xl md:text-6xl font-extrabold leading-tight">
  {{ homepage.hero_title }}
</h1>
           <p class="text-gray-300 text-lg md:text-xl">
  {{ homepage.hero_subtitle }}
</p>
            <div>
              <a href="#products" class="cta-btn inline-block bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-full text-lg shadow-md transition-all">
                Explore Products
              </a>
            </div>
          </div>
          
          <!-- Hero Image -->
          <div class="md:w-1/2 mt-10 md:mt-0 flex justify-center">
            {% if homepage.hero_image %}
 <img src="{{ homepage.hero_image }}"
     alt="TurboCare Hero"
     class="rounded-2xl shadow-lg">
{% endif %}
          </div>
        </div>
      </div>
    </section>
    <!-- Brand Value Proposition -->
    <section id="value" class="bg-gray-950 text-white py-20">
      <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20 text-center">
        
        <!-- Heading -->
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Why Choose <span class="text-blue-400">TurboCare?</span>
        </h2>
        <p class="text-gray-300 max-w-2xl mx-auto mb-12 text-lg">
          At TurboCare, we combine innovation, durability, and style to bring you the best in home appliances.
          Every product is designed to enhance your lifestyle and deliver long-lasting value.
        </p>
        
        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
          
          <!-- Feature 1 -->
          <div class="p-6 bg-gray-900 rounded-2xl shadow-lg hover:shadow-blue-500/20 transition">
            <div class="text-blue-400 mb-4">
              <!-- Icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6M9 8h6m7-2a2 2 0 012 2v12a2 2 0 01-2 2H8l-4 4V6a2 2 0 012-2h16z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Modern Technology</h3>
            <p class="text-gray-400">
              Our coolers, LED TVs, and speakers are built with the latest features for a seamless experience.
            </p>
          </div>
          
          <!-- Feature 2 -->
          <div class="p-6 bg-gray-900 rounded-2xl shadow-lg hover:shadow-blue-500/20 transition">
            <div class="text-blue-400 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m6 8a2 2 0 100-4m-6-6a2 2 0 100 4m0 0v6m0-6h6m-6 0H6" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Durability & Strength</h3>
            <p class="text-gray-400">
              With sturdy metal almirahs and reliable build quality, TurboCare products are made to last.
            </p>
          </div>
          
          <!-- Feature 3 -->
          <div class="p-6 bg-gray-900 rounded-2xl shadow-lg hover:shadow-blue-500/20 transition">
            <div class="text-blue-400 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m0 0h-1m4 0h-1m0 0h-1m-6 0a9 9 0 1118 0 9 9 0 01-18 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Trusted by Families</h3>
            <p class="text-gray-400">
              We’ve been enhancing homes with quality appliances that customers rely on for everyday comfort.
            </p>
          </div>
          
        </div>
      </div>
    </section>
<!-- Stats Section -->
<section id="stats" class="bg-gray-900 text-white py-16">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20">
    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6 text-center md:text-left">
      
      <!-- Happy Customers -->
      <div class="p-6 bg-gray-800 rounded-2xl shadow-md hover:shadow-blue-500/20 transition">
        <h3 class="text-4xl md:text-5xl font-bold text-blue-400">{{ homepage.customers }}</h3>
        <p class="mt-2 text-gray-300 text-lg">Happy Customers</p>
      </div>
      
      <!-- Quality Products -->
      <div class="p-6 bg-gray-800 rounded-2xl shadow-md hover:shadow-blue-500/20 transition">
        <h3 class="text-4xl md:text-5xl font-bold text-blue-400">{{ homepage.products_count }}</h3>
        <p class="mt-2 text-gray-300 text-lg">Quality Products</p>
      </div>
      
      <!-- Dealers -->
      <div class="p-6 bg-gray-800 rounded-2xl shadow-md hover:shadow-blue-500/20 transition">
        <h3 class="text-4xl md:text-5xl font-bold text-blue-400">{{ homepage.dealers }}</h3>
        <p class="mt-2 text-gray-300 text-lg">Dealer Network</p>
      </div>
      
      <!-- Cities -->
      <div class="p-6 bg-gray-800 rounded-2xl shadow-md hover:shadow-blue-500/20 transition">
        <h3 class="text-4xl md:text-5xl font-bold text-blue-400">{{ homepage.cities }}</h3>
        <p class="mt-2 text-gray-300 text-lg">Cities, Covered Nation wide</p>
      </div>
      
    </div>
  </div>
</section>

<!-- Product Categories Section -->
<section id="products" class="py-20 px-6 text-center">
  <h2 class="text-3xl md:text-4xl font-bold mb-12">
    Explore Our <span class="text-blue-400">Product Categories</span>
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 max-w-7xl mx-auto">

  {% for category in collections.categories %}
  
  <div class="bg-gray-900 rounded-2xl shadow-lg hover:shadow-blue-500/30 transition transform hover:-translate-y-2">

    {% if category.data.banner %}
      <img src="{{ category.data.banner }}" class="rounded-t-2xl w-full">
    {% endif %}

    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2">
        {{ category.data.title }}
      </h3>

      {% if category.data.description %}
      <p class="text-gray-400 mb-4">
        {{ category.data.description }}
      </p>
      {% endif %}

      <a href="/categories/{{ category.fileSlug }}/"
         class="cta-btn bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-full text-sm">
         Explore Products
      </a>
    </div>

  </div>

  {% endfor %}

</div>
    
</section>


<!-- Featured Products Carousel -->
{% if collections.products and collections.products.length > 0 %}
<section id="featured" class="py-20 bg-gray-950 text-white">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20">
    <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">
      Featured <span class="text-blue-400">Products</span>
    </h2>
    
    <div class="relative">
      <!-- Carousel container -->
      <div id="carousel" class="flex overflow-x-auto space-x-6 snap-x snap-mandatory scrollbar-hide">

{% for product in collections.featured %}

<div class="flex-shrink-0 w-64 bg-gray-900 rounded-2xl shadow-lg p-4 snap-center hover:scale-105 transform transition">

 
    {% if product.data.images and product.data.images.length > 0 %}
  <img src="{{ product.data.images[0] }}" class="rounded-lg mb-4">
{% endif %}

  <h3 class="text-xl font-semibold mb-2">
    {{ product.data.title }}
  </h3>

  <p class="text-gray-400 mb-2">
    MRP: ₹{{ product.data.mrp }}
  </p>

  <a href="/products/{{ product.fileSlug }}/"
     class="cta-btn bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-full text-sm">
     View Details
  </a>

</div>

{% endfor %}
        
      </div>
      
      <!-- Carousel navigation buttons -->
      <button id="prev" class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full shadow-md hover:bg-gray-700">
        &#10094;
      </button>
      <button id="next" class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full shadow-md hover:bg-gray-700">
        &#10095;
      </button>
    </div>
  </div>
</section>
{% endif %}
<!-- Lifestyle Selection Section -->
<section id="lifestyle" class="bg-gray-950 text-white py-20">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20 text-center">
    
    <!-- Heading -->
    <h2 class="text-3xl md:text-4xl font-bold mb-6">
      Choose Your Lifestyle
    </h2>
    <p class="text-gray-400 mb-12">
      Select a lifestyle category to explore products that match your needs.
    </p>
    
    <!-- Categories -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
      
      <!-- Cool & Comfortable -->
      <a href="coolers.html" class="lifestyle-card block bg-gray-900 rounded-2xl shadow-lg p-6 hover:shadow-blue-500/30 transition transform hover:-translate-y-2">
        <img src="https://via.placeholder.com/150?text=Cool+Lifestyle" alt="Cool Lifestyle" class="mx-auto rounded-full mb-4 w-32 h-32 object-cover">
        <h3 class="text-xl font-semibold mb-2">Cool & Comfortable</h3>
        <p class="text-gray-400 text-sm">Explore our high-performance coolers and fans.</p>
      </a>
      
      <!-- Entertainment Hub -->
      <a href="ledtvs.html" class="lifestyle-card block bg-gray-900 rounded-2xl shadow-lg p-6 hover:shadow-blue-500/30 transition transform hover:-translate-y-2">
        <img src="https://via.placeholder.com/150?text=Entertainment" alt="Entertainment" class="mx-auto rounded-full mb-4 w-32 h-32 object-cover">
        <h3 class="text-xl font-semibold mb-2">Entertainment Hub</h3>
        <p class="text-gray-400 text-sm">Smart TVs and speakers for immersive entertainment.</p>
      </a>
      
      <!-- Organized Home -->
      <a href="almirahs.html" class="lifestyle-card block bg-gray-900 rounded-2xl shadow-lg p-6 hover:shadow-blue-500/30 transition transform hover:-translate-y-2">
        <img src="https://via.placeholder.com/150?text=Organized+Home" alt="Organized Home" class="mx-auto rounded-full mb-4 w-32 h-32 object-cover">
        <h3 class="text-xl font-semibold mb-2">Organized Home</h3>
        <p class="text-gray-400 text-sm">Metal almirahs and storage solutions for neat homes.</p>
      </a>
      
      <!-- Party Vibes -->
      <a href="speakers.html" class="lifestyle-card block bg-gray-900 rounded-2xl shadow-lg p-6 hover:shadow-blue-500/30 transition transform hover:-translate-y-2">
        <img src="https://via.placeholder.com/150?text=Party+Vibes" alt="Party Vibes" class="mx-auto rounded-full mb-4 w-32 h-32 object-cover">
        <h3 class="text-xl font-semibold mb-2">Party Vibes</h3>
        <p class="text-gray-400 text-sm">Portable speakers and sound systems for your gatherings.</p>
      </a>
      
    </div>
  </div>
</section>
<!-- Call-To-Action Banner with Floating Product -->
<section id="cta" class="relative bg-blue-500 text-white py-20 overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-20 text-center flex flex-col md:flex-row items-center justify-between gap-6 relative z-10">

    <!-- CTA Text -->
    <div class="md:w-2/3 space-y-4 text-center md:text-left">
      <h2 class="text-3xl md:text-4xl font-bold">
        Upgrade Your Home Today with <span class="text-white">TurboCare</span>
      </h2>
      <p class="text-white/90 text-lg md:text-xl">
        Discover a wide range of home appliances designed to make your life smarter, comfortable, and enjoyable.
      </p>
      <!-- CTA Button -->
      <a href="#products" class="inline-block bg-gray-900 hover:bg-gray-800 text-white px-8 py-4 rounded-full text-lg font-semibold shadow-lg transition-all mt-4">
        Explore Products
      </a>
    </div>

    <!-- Floating Product Image -->
    <div class="md:w-1/3 flex justify-center relative">
      <img src="https://via.placeholder.com/300x300?text=TurboCare+Product" 
           alt="TurboCare Product" 
           class="rounded-2xl shadow-2xl animate-float">
    </div>

  </div>

  <!-- Optional subtle background shapes -->
  <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
    <div class="absolute w-96 h-96 bg-white/10 rounded-full -top-20 -left-20 animate-pulse-slow"></div>
    <div class="absolute w-72 h-72 bg-white/5 rounded-full -bottom-32 -right-16 animate-pulse-slow"></div>
  </div>
</section>
<div class="newsletter-container">
  <h2>Stay Updated with TurboCare</h2>
  <p>Subscribe to get the latest offers, product updates, and lifestyle tips straight to your inbox.</p>
  <form id="newsletterForm" class="newsletter-form">
    <input type="text" id="name" name="name" placeholder="Your Name" required>
    <input type="email" id="email" name="email" placeholder="Your Email" required>
    <button type="submit">Subscribe</button>
  </form>
  <p id="responseMessage" class="response-message"></p>
</div>
<footer class="footer">
  <div class="footer-container">
    
    <!-- Quick Links -->
    <div class="footer-section">
      <h3>Quick Links</h3>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/support">Support</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
    
    <!-- Contact Info -->
    <div class="footer-section">
      <h3>Contact Info</h3>
      <p>Email: <a href="mailto:support@turbocare.com">{{ footer.email }}</a></p>
      <p>Phone: <a href="tel:+1234567890">{{ footer.phone }}</a></p>
      <p>Address: {{ footer.address }}</p>
    </div>
    
    <!-- Social Media -->
    <div class="footer-section">
      <h3>Follow Us</h3>
      <div class="social-icons">
        <a href="#" target="_blank"><img src="icons/facebook.svg" alt="Facebook"></a>
        <a href="#" target="_blank"><img src="icons/twitter.svg" alt="Twitter"></a>
        <a href="#" target="_blank"><img src="icons/instagram.svg" alt="Instagram"></a>
        <a href="#" target="_blank"><img src="icons/linkedin.svg" alt="LinkedIn"></a>
      </div>
    </div>
    
  </div>
  
  <!-- Copyright -->
  <div class="footer-bottom">
    <p>&copy; 2025 TurboCare. All rights reserved.</p>
  </div>
</footer>
