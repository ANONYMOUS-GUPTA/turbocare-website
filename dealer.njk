<section class="py-20 px-6 max-w-4xl mx-auto text-white text-center">

  <h1 class="text-4xl font-bold mb-6 text-blue-400">
    {{ dealer.title }}
  </h1>

  <p class="text-gray-300 mb-10">
    {{ dealer.description }}
  </p>

  <form class="bg-gray-900 p-8 rounded-2xl space-y-6">

    <input type="text" placeholder="Dealer Name" class="w-full p-3 rounded bg-gray-800 text-white">
    <input type="text" placeholder="City" class="w-full p-3 rounded bg-gray-800 text-white">
    <input type="email" placeholder="Email" class="w-full p-3 rounded bg-gray-800 text-white">
    <input type="tel" placeholder="Phone Number" class="w-full p-3 rounded bg-gray-800 text-white">

    <button class="bg-blue-500 px-6 py-3 rounded-full">
      Submit Inquiry
    </button>

  </form>

